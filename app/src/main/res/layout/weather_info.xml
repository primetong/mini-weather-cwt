<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chenwt.pku.edu.cn.myweather.MainActivity">
    
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="@color/weather_rose"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/title_city_manger"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp" 
            android:src="@drawable/title_city" />
        
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/title_city_manger"
            android:background="#A71717" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="北京天气"
            android:textColor="@color/white"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">
        <!-- 今日天气信息 -->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dp">
            <!-- 城市名称 -->
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15.0dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="40.0sp"
                android:text="北京" />
            <!-- 发布时间 -->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/city"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="今天12:24分布"
                android:textColor="@android:color/white"
                android:textSize="13.0sp" />
            <!-- 温度信息 -->
            <TextView
                android:id="@+id/temperature_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/time"
                android:layout_marginLeft="15.0dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="温度：24℃"
                android:textColor="@android:color/white"
                android:textSize="18.0sp" />
            <!-- 湿度信息 -->
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/temperature_now"
                android:layout_marginLeft="15.0dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="湿度：42%"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"/>
            <!-- PM2.5整体信息块 -->
            <LinearLayout
                android:id="@+id/pm2_5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <!-- PM2.5详情 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6.0dp"
                    android:paddingLeft="12.0dp"
                    android:paddingRight="12.0dp"
                    android:paddingTop="6.0dp">
                    <!-- PM2.5文字详情 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- PM2.5 -->
                        <TextView
                            android:id="@+id/pm2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="PM2.5"
                            android:textColor="@android:color/white"
                            android:textSize="12.0sp"/>
                        <!-- PM2.5数值 -->
                        <TextView
                            android:id="@+id/pm_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="242"
                            android:textColor="@android:color/white"
                            android:textSize="30.0sp"/>
                    </LinearLayout>
                    <!-- PM2.5图片 -->
                    <ImageView
                        android:id="@+id/pm2_5_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dp"
                        android:src="@drawable/biz_plugin_weather_0_50"/>
                </LinearLayout>

                <!-- 污染等级(重度污染) -->
                <TextView
                    android:id="@+id/pm2_5_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="重度污染"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"/>
            </LinearLayout>
            <!-- 今日天气信息块 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/humidity"
                android:layout_centerInParent="true"
                android:layout_marginTop="5.0dp">

                <!-- 天气情况图片示例 -->
                <ImageView
                    android:id="@+id/weather_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/biz_plugin_weather_qing"/>
                <!-- 今日星期 -->
                <TextView
                    android:id="@+id/week_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="今天 星期三"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
                <!-- 温度范围 -->
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/week_today"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="12℃~24℃"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"/>
                <!-- 天气状况 -->
                <TextView
                    android:id="@+id/climate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/temperature"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="晴空万里"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"/>
                <!-- 风力信息 -->
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/climate"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="微风习习"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"/>
            </RelativeLayout>

        </RelativeLayout>

        <!-- 六日天气信息 -->

        <!-- 广告等信息 -->

    </LinearLayout>

</RelativeLayout>
